@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - University Enrollment System</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/edmark.css")">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #2c3e50;
        }

        .content-section {
            padding: 40px 0;
            flex-grow: 1;
        }

        .jumbotron {
            background: linear-gradient(135deg, #2c3e50, #3498db);
            color: white;
            padding: 3rem 2rem;
            margin-bottom: 3rem;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        .jumbotron::before {
            content: "";
            position: absolute;
            top: -50px;
            right: -50px;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .jumbotron::after {
            content: "";
            position: absolute;
            bottom: -30px;
            left: -30px;
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .display-4 {
            font-weight: 700;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .lead {
            font-weight: 400;
            font-size: 1.25rem;
            position: relative;
            z-index: 1;
        }

        .card {
            margin-bottom: 25px;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            height: 100%;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
            font-size: 1.25rem;
        }

        .card-text {
            color: #666;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #3498db;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #2c3e50;
            transform: translateY(-2px);
        }

        .card-icon {
            font-size: 2.5rem;
            color: #3498db;
            margin-bottom: 1rem;
        }

        .features-section {
            padding: 60px 0;
            background-color: white;
        }

        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            color: #2c3e50;
            font-weight: 700;
        }

        hr.my-4 {
            border-top: 2px solid rgba(255,255,255,0.3);
            width: 50%;
            margin: 1.5rem auto;
        }

        .container {
            max-width: 1200px;
        }
    </style>
</head>
<body>
@Html.Partial("~/Views/Shared/_MainHeader.cshtml")

<div class="container content-section">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to University Enrollment</h1>
        <p class="lead">Your gateway to academic success and course management</p>
        <hr class="my-4">
        <p>Access all your academic tools in one place - from enrollment to grades tracking</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h5 class="card-title">Student Profile</h5>
                    <p class="card-text">Manage your personal information and academic details in one convenient location.</p>
                    <a href="@Url.Action("Student_Profile", "Main")" class="btn btn-primary">Go to Profile</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h5 class="card-title">Course Enrollment</h5>
                    <p class="card-text">Register for new courses and manage your current academic workload.</p>
                    <a href="@Url.Action("Student_Enrollment", "Main")" class="btn btn-primary">Start Enrollment</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h5 class="card-title">Class Schedule</h5>
                    <p class="card-text">View your personalized timetable and never miss an important class.</p>
                    <a href="@Url.Action("Student_Schedule", "Main")" class="btn btn-primary">View Schedule</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const headerPath = '../Shared/MainHeader.cshtml';

        fetch(headerPath)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.text();
            })
            .then(html => {
                document.getElementById('main-header-placeholder').innerHTML = html;

                const currentPath = window.location.pathname;
                const currentPage = currentPath.substring(currentPath.lastIndexOf('/') + 1);

                const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
                navLinks.forEach(link => {
                    const linkHref = link.getAttribute('href');
                    const linkPage = linkHref.substring(linkHref.lastIndexOf('/') + 1);

                    if (linkPage.toLowerCase() === currentPage.toLowerCase()) {
                        link.classList.add('active');
                        link.setAttribute('aria-current', 'page');
                    } else {
                        link.classList.remove('active');
                        link.removeAttribute('aria-current');
                    }
                });

            })
            .catch(error => {
                console.error('Error loading header:', error);
                document.getElementById('main-header-placeholder').innerHTML = '<p style="color: red; text-align: center;">Failed to load navigation.</p>';
            });
    });
</script>
</body>
</html>